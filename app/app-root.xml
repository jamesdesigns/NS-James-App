<!--
The TabView component provides a simple way to navigate between different views by
tapping on some of the tabs or by swiping between the views.
Learn more about the TabView component in this documentation article:
http://docs.nativescript.org/cookbook/ui/tab-view
-->
<TabView androidTabsPosition="bottom">
    <TabViewItem title="Home" ios:iconSource="res://tabIcons/home" android:iconSource="res://home">
        <Frame defaultPage="home/home-items-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Map" ios:iconSource="res://tabIcons/map" android:iconSource="res://map">
        <Frame defaultPage="map/map-page"></Frame>
    </TabViewItem>
    <TabViewItem title="Alerts" ios:iconSource="res://tabIcons/alerts" android:iconSource="res://alerts">
        <Frame defaultPage="alerts/alerts-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Settings" ios:iconSource="res://tabIcons/heart" android:iconSource="res://heart">
        <Frame defaultPage="settings/settings-page"></Frame>
    </TabViewItem>
</TabView>
